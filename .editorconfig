# EditorConfig is awesome: https://EditorConfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JS/TS/TSX/JSX files
[*.{js,jsx,ts,tsx,mjs}]
indent_style = space
indent_size = 2
quote_type = single
max_line_length = 100

# JSON files
[*.{json,jsonc}]
indent_style = space
indent_size = 2

# CSS/SCSS files
[*.{css,scss}]
indent_style = space
indent_size = 2

# HTML files
[*.html]
indent_style = space
indent_size = 2

# YAML files
[*.{yaml,yml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
